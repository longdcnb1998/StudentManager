<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_margin="8dp"
        android:textSize="20sp"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:text="Nhà Trường"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/textView_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_margin="8dp"
        android:textSize="20sp"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:text="02/02/2020"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/textView_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:maxLines="2"
        android:textSize="18sp"
        android:id="@+id/textView_notice_content"
        android:paddingLeft="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_sender"
        android:text="Xin chào tất cả các bạn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>